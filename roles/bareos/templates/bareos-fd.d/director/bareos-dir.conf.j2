# {{ ansible_managed }}

# Based on https://docs.bareos.org/Configuration/FileDaemon.html

{% if bareos_fd_directors is defined %}
{% for director in bareos_fd_directors %}
Director {
  Name = {{ director.name }}
  Password = "{{ director.password }}"
  Monitor = {{ director.monitor | ternary('yes','no') }}
}
{% endfor %}
{% endif %}
