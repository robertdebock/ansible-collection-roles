{% if vault_configuration_storage_raft.retry_join.auto_join_scheme is defined and vault_configuration_storage_raft.retry_join.auto_join_scheme != "https" %}
    auto_join_scheme = "{{ vault_configuration_storage_raft.retry_join.auto_join_scheme }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.auto_join_port is defined and vault_configuration_storage_raft.retry_join.auto_join_port != 8200 %}
    auto_join_port = {{ vault_configuration_storage_raft.retry_join.auto_join_port }}
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_tls_servername is defined and vault_configuration_storage_raft.retry_join.leader_tls_servername != "" %}
