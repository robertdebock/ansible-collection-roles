{% endif %}
{%if vault_configuration_storage_raft.retry_join.leader_ca_cert_file is defined and vault_configuration_storage_raft.retry_join.leader_ca_cert_file != "" %}
    leader_ca_cert_file = "{{ vault_configuration_storage_raft.retry_join.leader_ca_cert_file }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_client_cert_file is defined and vault_configuration_storage_raft.retry_join.leader_client_cert_file != "" %}
    leader_client_cert_file = "{{ vault_configuration_storage_raft.retry_join.leader_client_cert_file }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_client_key_file is defined and vault_configuration_storage_raft.retry_join.leader_client_key_file != "" %}
    leader_client_key_file = "{{ vault_configuration_storage_raft.retry_join.leader_client_key_file }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_ca_cert is defined and vault_configuration_storage_raft.retry_join.leader_ca_cert != "" %}
    leader_ca_cert = "{{ vault_configuration_storage_raft.retry_join.leader_ca_cert }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_client_cert is defined and vault_configuration_storage_raft.retry_join.leader_client_cert != "" %}
    leader_client_cert = "{{ vault_configuration_storage_raft.retry_join.leader_client_cert }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join.leader_client_key is defined and vault_configuration_storage_raft.retry_join.leader_client_key != "" %}
    leader_client_key =  "{{ vault_configuration_storage_raft.retry_join.leader_client_key }}"
{% endif %}
{% if vault_configuration_storage_raft.retry_join_as_non_voter %}
  retry_join_as_non_voter = true
{% endif %}
{% if vault_configuration_storage_raft.max_entry_size is defined and vault_configuration_storage_raft.max_entry_size != 1048576 %}
  max_entry_size = {{ vault_configuration_storage_raft.max_entry_size }}
{% endif %}
{% if vault_configuration_storage_raft.autopilot_reconcile_interval is defined and vault_configuration_storage_raft.autopilot_reconcile_interval != "10s" %}
  autopilot_reconcile_interval = "{{ vault_configuration_storage_raft.autopilot_reconcile_interval }}"
{% endif %}
{% if vault_configuration_storage_raft.autopilot_update_interval is defined and vault_configuration_storage_raft.autopilot_update_interval != "2s" %}
  autopilot_update_interval = "{{ vault_configuration_storage_raft.autopilot_update_interval }}"
{% endif %}
{% if vault_configuration_storage_raft.autopilot_upgrade_version is defined and vault_configuration_storage_raft.autopilot_upgrade_version != "" %}
  autopilot_upgrade_version = "{{ vault_configuration_storage_raft.autopilot_upgrade_version }}"
{% endif %}
{% if vault_configuration_storage_raft.autopilot_redundancy_zone is defined and vault_configuration_storage_raft.autopilot_redundancy_zone != "" %}
  autopilot_redundancy_zone = "{{ vault_configuration_storage_raft.autopilot_redundancy_zone }}"
{% endif %}
{% endif %}
  }
}
{% endif %}

