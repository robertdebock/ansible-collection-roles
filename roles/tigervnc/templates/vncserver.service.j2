{{ ansible_managed | comment }}
[Unit]
Description=Remote desktop service (VNC)
After=syslog.target network.target

[Service]
Type=forking
User={{ tigervnc_username }}
ExecStartPre=/bin/sh -c '{{ tigervnc_binary }} -kill %i > /dev/null 2>&1 || :'
ExecStart={{ tigervnc_binary }} %i
ExecStop=/bin/sh -c '{{ tigervnc_binary }} -kill %i > /dev/null 2>&1 || :'


[Install]
WantedBy=multi-user.target
